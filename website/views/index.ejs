<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>SAA-C03 Practice Exams</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <script>
        tailwind.config = {
            darkMode: 'class',
            theme: {
                extend: {
                    colors: {
                        aws: {
                            orange: '#FF9900',
                            blue: '#232F3E',
                            light: '#F2F3F3'
                        }
                    },
                    animation: {
                        'fade-in': 'fadeIn 0.5s ease-in-out',
                        'slide-up': 'slideUp 0.6s ease-out',
                        'bounce-in': 'bounceIn 0.8s ease-out'
                    },
                    keyframes: {
                        fadeIn: {
                            '0%': { opacity: '0' },
                            '100%': { opacity: '1' }
                        },
                        slideUp: {
                            '0%': { transform: 'translateY(20px)', opacity: '0' },
                            '100%': { transform: 'translateY(0)', opacity: '1' }
                        },
                        bounceIn: {
                            '0%': { transform: 'scale(0.3)', opacity: '0' },
                            '50%': { transform: 'scale(1.05)' },
                            '70%': { transform: 'scale(0.9)' },
                            '100%': { transform: 'scale(1)', opacity: '1' }
                        }
                    }
                }
            }
        }
    </script>
</head>
<body class="bg-gradient-to-br from-blue-50 via-white to-orange-50 dark:from-gray-900 dark:via-gray-800 dark:to-gray-900 min-h-screen transition-colors duration-200">
    <!-- Header -->
    <header class="bg-white/80 backdrop-blur-lg dark:bg-gray-800/80 shadow-lg border-b border-gray-200 dark:border-gray-700">
        <nav class="max-w-7xl mx-auto px-4 py-4">
            <div class="flex items-center justify-between">
                <div class="flex items-center space-x-3">
                    <div class="w-8 h-8 bg-aws-orange rounded-lg flex items-center justify-center">
                        <svg class="w-5 h-5 text-white" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M9 12l2 2 4-4m6 2a9 9 0 11-18 0 9 9 0 0118 0z"/>
                        </svg>
                    </div>
                    <span class="bg-gradient-to-r from-blue-600 to-orange-500 bg-clip-text text-transparent font-bold text-lg">AWS SAA-C03 Practice</span>
                </div>
                <div class="flex items-center space-x-4">
                    <div class="hidden md:flex space-x-6">
                        <a href="#" class="text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white transition-colors">Dashboard</a>
                        <a href="#" class="text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white transition-colors">Progress</a>
                        <a href="#" class="text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white transition-colors">Analytics</a>
                    </div>
                    <button id="theme-toggle" class="p-2 rounded-lg bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 transition-colors">
                        <svg id="theme-toggle-dark-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path d="M17.293 13.293A8 8 0 016.707 2.707a8.001 8.001 0 1010.586 10.586z"></path>
                        </svg>
                        <svg id="theme-toggle-light-icon" class="hidden w-5 h-5" fill="currentColor" viewBox="0 0 20 20">
                            <path fill-rule="evenodd" d="M10 2a1 1 0 011 1v1a1 1 0 11-2 0V3a1 1 0 011-1zm4 8a4 4 0 11-8 0 4 4 0 018 0zm-.464 4.95l.707.707a1 1 0 001.414-1.414l-.707-.707a1 1 0 00-1.414 1.414zm2.12-10.607a1 1 0 010 1.414l-.706.707a1 1 0 11-1.414-1.414l.707-.707a1 1 0 011.414 0zM17 11a1 1 0 100-2h-1a1 1 0 100 2h1zm-7 4a1 1 0 011 1v1a1 1 0 11-2 0v-1a1 1 0 011-1zM5.05 6.464A1 1 0 106.465 5.05l-.708-.707a1 1 0 00-1.414 1.414l.707.707zm1.414 8.486l-.707.707a1 1 0 01-1.414-1.414l.707-.707a1 1 0 011.414 1.414zM4 11a1 1 0 100-2H3a1 1 0 000 2h1z" clip-rule="evenodd"></path>
                        </svg>
                    </button>
                    <button id="mobile-menu-btn" class="md:hidden p-2 rounded-lg bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 transition-colors">
                        <svg class="w-5 h-5" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                            <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M4 6h16M4 12h16M4 18h16"></path>
                        </svg>
                    </button>
                </div>
            </div>
        </nav>
        
        <!-- Mobile Menu -->
        <div id="mobile-menu" class="hidden md:hidden bg-white dark:bg-gray-800 border-t dark:border-gray-700">
            <div class="px-4 py-2 space-y-1">
                <a href="#" class="block px-3 py-2 text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white transition-colors">Dashboard</a>
                <a href="#" class="block px-3 py-2 text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white transition-colors">Progress</a>
                <a href="#" class="block px-3 py-2 text-gray-600 hover:text-gray-900 dark:text-gray-300 dark:hover:text-white transition-colors">Analytics</a>
            </div>
        </div>
        
        <div class="max-w-7xl mx-auto px-4 py-12 md:py-16 text-center">
            <div class="inline-flex items-center space-x-2 bg-orange-100 dark:bg-orange-900/30 px-4 py-2 rounded-full mb-6">
                <span class="w-2 h-2 bg-green-500 rounded-full animate-pulse"></span>
                <span class="text-sm font-medium text-orange-700 dark:text-orange-300">16 Professional Practice Exams Available</span>
            </div>
            <h1 class="text-4xl md:text-6xl font-bold mb-6">
                <span class="bg-gradient-to-r from-blue-600 via-purple-600 to-orange-500 bg-clip-text text-transparent">
                    SAA-C03 Practice Exams
                </span>
            </h1>
            <p class="text-lg md:text-xl text-gray-600 dark:text-gray-300 mb-8 max-w-3xl mx-auto leading-relaxed">
                Master the AWS Solutions Architect Associate certification with our comprehensive, 
                <span class="font-semibold text-blue-600 dark:text-blue-400">professionally designed</span> practice exam suite
            </p>
            <div class="flex flex-col sm:flex-row gap-4 justify-center">
                <button class="bg-gradient-to-r from-blue-600 to-blue-700 hover:from-blue-700 hover:to-blue-800 text-white font-semibold py-3 px-8 rounded-xl shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                    üöÄ Start Learning Now
                </button>
                <button class="bg-white/80 backdrop-blur-sm hover:bg-white text-gray-700 font-semibold py-3 px-8 rounded-xl border border-gray-200 hover:border-gray-300 shadow-lg hover:shadow-xl transform hover:scale-105 transition-all duration-200">
                    üìä View Analytics
                </button>
            </div>
        </div>
    </header>

    <!-- Stats Section -->
    <section class="bg-gray-300 dark:bg-gray-800 py-12">
        <div class="max-w-7xl mx-auto px-4">
            <div class="grid grid-cols-1 md:grid-cols-3 gap-6">
                <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
                    <div class="flex items-center">
                        <div class="p-3 rounded-lg bg-aws-orange">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M9 12h6m-6 4h6m2 5H7a2 2 0 01-2-2V5a2 2 0 012-2h5.586a1 1 0 01.707.293l5.414 5.414a1 1 0 01.293.707V19a2 2 0 01-2 2z"></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-2xl font-bold text-gray-900 dark:text-white"><%= exams.length %></p>
                            <p class="text-gray-600 dark:text-gray-300">Practice Exams</p>
                        </div>
                    </div>
                </div>
                
                <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
                    <div class="flex items-center">
                        <div class="p-3 rounded-lg bg-blue-600">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M8.228 9c.549-1.165 2.03-2 3.772-2 2.21 0 4 1.343 4 3 0 1.4-1.278 2.575-3.006 2.907-.542.104-.994.54-.994 1.093m0 3h.01M21 12a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-2xl font-bold text-gray-900 dark:text-white">65</p>
                            <p class="text-gray-600 dark:text-gray-300">Questions Each</p>
                        </div>
                    </div>
                </div>
                
                <div class="bg-white dark:bg-gray-700 rounded-lg p-6 shadow-sm">
                    <div class="flex items-center">
                        <div class="p-3 rounded-lg bg-green-600">
                            <svg class="w-6 h-6 text-white" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                                <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M12 8v4l3 3m6-3a9 9 0 11-18 0 9 9 0 0118 0z"></path>
                            </svg>
                        </div>
                        <div class="ml-4">
                            <p class="text-2xl font-bold text-gray-900 dark:text-white">130</p>
                            <p class="text-gray-600 dark:text-gray-300">Minutes Each</p>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </section>

    <!-- Main Content -->
    <main class="max-w-7xl mx-auto px-4 py-12">
        <!-- Performance Dashboard -->
        <div class="mb-12 bg-gray-100 dark:bg-gray-800 rounded-lg shadow-sm border border-gray-300 dark:border-gray-700 p-6">
            <div class="flex items-center justify-between mb-6">
                <h2 class="text-2xl font-bold text-gray-900 dark:text-white">Performance Overview</h2>
                <div class="flex items-center space-x-2 text-sm text-gray-500 dark:text-gray-400">
                    <kbd class="px-2 py-1 bg-gray-100 dark:bg-gray-700 rounded">?</kbd>
                    <span>for shortcuts</span>
                </div>
            </div>
            <div class="grid grid-cols-1 md:grid-cols-4 gap-4">
                <div class="text-center">
                    <div class="text-3xl font-bold text-aws-orange" id="total-completed">0</div>
                    <div class="text-sm text-gray-600 dark:text-gray-400">Completed</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-green-600" id="total-passed">0</div>
                    <div class="text-sm text-gray-600 dark:text-gray-400">Passed</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-blue-600" id="avg-score">0%</div>
                    <div class="text-sm text-gray-600 dark:text-gray-400">Avg Score</div>
                </div>
                <div class="text-center">
                    <div class="text-3xl font-bold text-purple-600" id="study-streak">0</div>
                    <div class="text-sm text-gray-600 dark:text-gray-400">Day Streak</div>
                </div>
            </div>
        </div>

        <!-- Recent Exams -->
        <div class="mb-8" id="recent-exams-section" style="display: none;">
            <h2 class="text-xl font-bold text-gray-900 dark:text-white mb-4">Continue Recent Exams</h2>
            <div class="grid grid-cols-1 md:grid-cols-3 gap-4" id="recent-exams-list"></div>
        </div>

        <!-- Search Bar -->
        <div class="mb-8">
            <div class="relative max-w-md mx-auto">
                <div class="absolute inset-y-0 left-0 pl-3 flex items-center pointer-events-none">
                    <svg class="w-5 h-5 text-gray-400" fill="none" stroke="currentColor" viewBox="0 0 24 24">
                        <path stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21 21l-6-6m2-5a7 7 0 11-14 0 7 7 0 0114 0z"></path>
                    </svg>
                </div>
                <input type="text" id="exam-search" placeholder="Search exams..." 
                       class="block w-full pl-10 pr-3 py-3 border border-gray-300 dark:border-gray-600 rounded-lg bg-white dark:bg-gray-700 text-gray-900 dark:text-white placeholder-gray-500 dark:placeholder-gray-400 focus:outline-none focus:ring-2 focus:ring-aws-orange focus:border-transparent">
            </div>
            <div class="flex justify-center mt-4 space-x-4">
                <button class="filter-btn px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-aws-orange hover:text-white transition-colors" data-filter="all">All</button>
                <button class="filter-btn px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-aws-orange hover:text-white transition-colors" data-filter="not-taken">Not Taken</button>
                <button class="filter-btn px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-aws-orange hover:text-white transition-colors" data-filter="completed">Completed</button>
                <button class="filter-btn px-4 py-2 rounded-lg bg-gray-200 dark:bg-gray-700 text-gray-700 dark:text-gray-300 hover:bg-aws-orange hover:text-white transition-colors" data-filter="passed">Passed</button>
            </div>
        </div>

        <!-- Section Header -->
        <div class="text-center mb-10">
            <h2 class="text-3xl font-bold bg-gradient-to-r from-blue-600 to-orange-500 bg-clip-text text-transparent mb-3">Choose Your Practice Exam</h2>
            <p class="text-gray-600 dark:text-gray-400">Select an exam to start your AWS certification journey</p>
        </div>

        <!-- Exam Grid -->
        <div class="grid grid-cols-1 md:grid-cols-2 lg:grid-cols-3 gap-6" id="exam-grid">
            <% exams.forEach((exam, index) => { %>
            <div class="group bg-white/95 backdrop-blur-sm dark:bg-gray-800/95 rounded-2xl shadow-lg border border-gray-200/50 dark:border-gray-700/50 hover:shadow-2xl hover:-translate-y-1 transition-all duration-300 overflow-hidden">
                <div class="absolute inset-0 bg-gradient-to-br from-blue-500/5 to-orange-500/5 opacity-0 group-hover:opacity-100 transition-opacity duration-300"></div>
                <div class="relative">
                    <!-- Header with gradient -->
                    <div class="relative bg-gradient-to-r from-blue-600 via-purple-600 to-orange-500 p-6 text-white overflow-hidden">
                        <div class="absolute top-0 right-0 w-32 h-32 bg-white/10 rounded-full -mr-16 -mt-16"></div>
                        <div class="absolute bottom-0 left-0 w-24 h-24 bg-white/10 rounded-full -ml-12 -mb-12"></div>
                        <div class="relative flex items-center justify-between">
                            <div class="flex items-center space-x-3">
                                <div class="w-14 h-14 bg-white/20 backdrop-blur-sm rounded-2xl flex items-center justify-center text-white font-bold text-2xl shadow-lg">
                                    <%= exam.id %>
                                </div>
                                <div>
                                    <h3 class="text-xl font-bold">Exam <%= exam.id %></h3>
                                    <div class="flex items-center space-x-2 mt-1">
                                        <span class="difficulty-badge-<%= exam.id %> px-2 py-1 text-xs font-bold rounded-full bg-white/30 backdrop-blur-sm"></span>
                                        <span class="text-xs bg-white/20 px-2 py-1 rounded-full">Associate</span>
                                    </div>
                                </div>
                            </div>
                            <div class="text-right">
                                <div class="w-5 h-5 rounded-full bg-white/30 mb-1" id="status-<%= exam.id %>"></div>
                                <div class="text-xs opacity-75">Status</div>
                            </div>
                        </div>
                    </div>
                    
                    <!-- Content -->
                    <div class="p-6">
                        <div class="grid grid-cols-2 gap-3 mb-5">
                            <div class="bg-blue-50 dark:bg-blue-900/20 rounded-xl p-3 text-center border border-blue-100 dark:border-blue-800">
                                <div class="text-2xl mb-1">üìù</div>
                                <div class="text-lg font-bold text-blue-600 dark:text-blue-400">65</div>
                                <div class="text-xs text-gray-600 dark:text-gray-400">Questions</div>
                            </div>
                            <div class="bg-orange-50 dark:bg-orange-900/20 rounded-xl p-3 text-center border border-orange-100 dark:border-orange-800">
                                <div class="text-2xl mb-1">‚è±Ô∏è</div>
                                <div class="text-lg font-bold text-orange-600 dark:text-orange-400">130</div>
                                <div class="text-xs text-gray-600 dark:text-gray-400">Minutes</div>
                            </div>
                        </div>
                        
                        <!-- Progress -->
                        <div class="mb-6">
                            <div class="flex justify-between text-sm text-gray-500 dark:text-gray-400 mb-2">
                                <span>Progress</span>
                                <span id="progress-<%= exam.id %>">0%</span>
                            </div>
                            <div class="w-full bg-gray-200 dark:bg-gray-600 rounded-full h-2">
                                <div class="bg-gradient-to-r from-blue-500 to-orange-500 h-2 rounded-full transition-all duration-500" style="width: 0%" id="progress-bar-<%= exam.id %>"></div>
                            </div>
                            <div class="text-center text-sm text-gray-500 dark:text-gray-400 mt-2" id="score-<%= exam.id %>">Not taken</div>
                        </div>
                        
                        <!-- Actions -->
                        <div class="flex gap-3">
                            <button onclick="showExamPreview(<%= exam.id %>)" 
                                    class="flex-1 bg-gray-100 hover:bg-gray-200 dark:bg-gray-700 dark:hover:bg-gray-600 text-gray-700 dark:text-gray-200 font-medium py-3 px-4 rounded-xl transition-all duration-200">
                                Preview
                            </button>
                            <a href="/exams/<%= exam.filename %>" 
                               class="flex-1 bg-gradient-to-r from-blue-600 to-orange-500 hover:from-blue-700 hover:to-orange-600 text-white font-bold py-3 px-4 rounded-xl transition-all duration-200 inline-block text-center shadow-lg hover:shadow-xl" 
                               id="exam-btn-<%= exam.id %>">
                                Start Exam
                            </a>
                        </div>
                    </div>
                </div>
            </div>
            <% }) %>
        </div>
    </main>

    <!-- Footer -->
    <footer class="bg-gray-50 border-t border-gray-200 dark:border-gray-700 dark:bg-gray-800 mt-16">
        <div class="max-w-7xl mx-auto px-4 py-8">
            <div class="text-center">
                <p class="text-gray-600">¬© 2024 SAA-C03 Practice Exams. Built for AWS certification success.</p>
            </div>
        </div>
    </footer>
    <script src="/js/theme.js"></script>
    <script src="/js/progress.js"></script>
    <script src="/js/search.js"></script>
    <script src="/js/shortcuts.js"></script>
    <script src="/js/autosave.js"></script>
    <script src="/js/mobile.js"></script>
    <script src="/js/difficulty.js"></script>
</body>
</html>